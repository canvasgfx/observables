{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "observables": {
      "root": "library/observables",
      "sourceRoot": "library/observables/src",
      "projectType": "library",
      "prefix": "rg",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss",
          "changeDetection": "OnPush",
          "flat": false
        },
        "@schematics/angular:pipe": {
          "flat": false
        },
        "@schematics/angular:directive": {
          "flat": false
        },
        "@schematics/angular:service": {
          "flat": false
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "library/tsconfig.lib.json",
            "project": "library/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "library/observables/test.ts",
            "tsConfig": "library/tsconfig.spec.json",
            "karmaConfig": "library/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "library/tsconfig.lib.json",
              "library/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "observables"
}
